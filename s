         string gunlerden = "Pazartesi";
            switch(Gunlerden)
            {
                case "Pazartesi":
                    Console.WriteLine("Gunlerden Pazartesi");
                    break;
                case "Sali":
                    Console.WriteLine("Gunlerden Sali");
                    break;
                case "Carsamba":
                    Console.WriteLine("Gunlerden Carsamba");
                    break;
                case "Persembe":
                    Console.WriteLine("Gunlerden Persembe");
                    break;
                case "Cuma":
                    Console.WriteLine("Cuma");
                    break;
                case "Cumartesi":
                    Console.WriteLine("Cumartesi");
                    break;
                case "Pazar":
                    Console.WriteLine("Pazar");
                    break;
                default:
                    Console.WriteLine("Lutfen gecerli bir gun giriniz!");
                    break;

            }
